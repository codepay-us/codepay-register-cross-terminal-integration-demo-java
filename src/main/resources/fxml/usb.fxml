<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="213.0" prefWidth="276.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ecrhub.controller.UsbController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" text="Connect" fx:id="connectButton" onAction="#connectButtonAction"/>
            <Button mnemonicParsing="false" text="Disconnect" fx:id="disconnectButton" disable="true"
                    onAction="#disconnectButtonAction"/>
        </HBox>
        <TextArea text="Unconnected!" disable="true" fx:id="connect_info"/>
    </children>
</VBox>
